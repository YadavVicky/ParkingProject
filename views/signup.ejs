<% layout('layouts/forms') %>
    <div class="row">
        <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
          <h2 class="ppq text-center"> Sign Up </h2>
           <div class="card shadow" id="lla">
            <div class="card-body" style="background-color: #000000;
            background-image: linear-gradient(147deg, #000000 0%, #04619f 74%);">
              <form class="mb-3 validate-forms" action="/signup" method="POST" novalidate>
                <div class="mb-3">
                    <label class="ppq form-label text-white" for="name"> Name <sup class="sua">*</sup> </label>
                    <input class="form-control" type="text" name="name" placeholder="Name" autofocus required>
                    <div class="invalid-feedback">
                        Please enter your Name 
                      </div>
                </div>
                <div class="mb-3">
                    <label class="ppq form-label text-white" for="phone">Phone Number  <sup class="sua">*</sup> </label>
                    <input class="form-control" type="number" name="phone" placeholder="Phone Number" required>
                    <div class="invalid-feedback">
                        Please enter correct phone number
                      </div>
                </div>
                <div class="mb-3">
                    <label class="ppq orm-label text-white" for="username">Email  <sup class="sua">*</sup> </label>
                    <input class="form-control" type="email" name="username" placeholder="Email" required>
                    <div class="invalid-feedback">
                        Please enter valid Email
                      </div>
                </div>
                <div class="mb-3">
                    <label class="ppq form-label text-white" for="password">Password  <sup class="sua">*</sup> </label>
                    <input class="form-control" type="password" name="password" placeholder="Password" required>
                    <div class="invalid-feedback">
                        Please enter a password
                      </div>
                </div>
                <button class="btn btn-success">Sign Up</button>   
            </form>

            <p class="ppq text-white">Already Have a Account?.....</p>
            <a class="btn btn-primary" class="a" href="/login">Log In</a>
            </div>
           </div>
            
        </div>
    </div>
    <script>
        (function () {
	'use strict'
	// Fetch all the forms we want to apply custom Bootstrap validation styles to
	var forms = document.querySelectorAll('.validate-forms');
	// Loop over them and prevent submission
	Array.from(forms)
	  .forEach(function (form) {
		form.addEventListener('submit', function (event) {
		  if (!form.checkValidity()) {
			event.preventDefault()
			event.stopPropagation()
		  }
  
		  form.classList.add('was-validated')
		}, false)
	  })
  })()
    </script>